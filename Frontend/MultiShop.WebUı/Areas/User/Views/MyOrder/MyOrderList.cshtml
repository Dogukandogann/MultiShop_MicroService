@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
    string tableRowColor = "";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sipariş Geçmişim</h4>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Toplam Fiyat</th>
                                        <th>Sipariş Tarihi</th>
                                        <th>Sipariş Detayları</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {

                                        count++;
                                        tableRowColor = count switch
                                        {
                                            1 => "table-info",
                                            2 => "table-warning",
                                            3 => "table-danger",
                                            4 => "table-success",
                                            5 => "table-primary",
                                            6 => "table-dark",
                                            7 => "table-secondary",
                                            _ => tableRowColor
                                        };
                                        <tr class="@tableRowColor">
                                            <th>@count</th>
                                            <td>@item.TotalPrice</td>
                                            <td>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</td>
                                            <td><a href="#" class="btn btn-warning">Sipariş Detayları</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

